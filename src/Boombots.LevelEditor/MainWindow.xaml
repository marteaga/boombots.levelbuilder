<Window x:Class="Boombots.LevelEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Boombots.LevelEditor"
        Title="Boombot Level Editor" Height="426" Width="789" WindowStyle="ToolWindow" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
		<Grid MinWidth="75">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>
    		<ListView x:Name="lstBlocks" MinWidth="16" ItemTemplate="{DynamicResource ImageListTemplate}">
    			<ListView.Resources>
    				<DataTemplate x:Key="ImageListTemplate">
    					<Grid>
    						<Image Height="16" VerticalAlignment="Stretch" Width="16" Stretch="None" Source="{Binding Filename}"/>
    					</Grid>
    				</DataTemplate>
    			</ListView.Resources>
			
    		</ListView>
    		<Button x:Name="btnSave" Content="Save" VerticalAlignment="Bottom" Grid.Row="1" Margin="10"/>
    	</Grid>
    	<local:LinedGrid Grid.Column="1" x:Name="gameGrid">
    		<local:LinedGrid.Background>
    			<ImageBrush ImageSource="Images/GameBG.png" Stretch="Uniform"/>
    		</local:LinedGrid.Background>
    	</local:LinedGrid>
    </Grid>
</Window>
